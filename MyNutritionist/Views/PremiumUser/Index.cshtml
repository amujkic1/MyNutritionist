@model MyNutritionist.Models.PremiumUser

	@{
		ViewData["Title"] = "Dashboard Premium";
	}
	<!DOCTYPE html>
	<style>



		.main-container {
			color: #abafc6;
			border-radius: 5px;
			padding: 40px;
			margin: 50px;
			width: fit-content;
			height: fit-content;
			display: inline-block;
			verticle-align: middle;
		}

		.header {
			font-size: 20px;
			color: #000;
			text-align: center;
		}

		.text1 {
			font-size: 22px;
			color: #000;
		}

		.text2 {
			font-size: 18px;
			color: #000;
		}

		.week-stats {
			white-space: nowrap;
			max-height: 170px;
			overflow: hidden;
		}

			.week-stats:hover {
				overflow-x: auto;
			}

		::-webkit-scrollbar {
			height: 5px;
			width: 100%;
		}

		/* Track */
		::-webkit-scrollbar-track {
			background: #444e80;
		}

		/* Handle */
		::-webkit-scrollbar-thumb {
			background: #abafc6;
			border-radius: 10px;
		}

		::-webkit-scrollbar-thumb {
			background: #5397d6;
		}

		.day-group {
			cursor: pointer;
			max-width: 400px;
			height: 110px;
			margin: 10px;
			display: inline-block;
		}

		.bar {
			background-color: #abafc6;
			width: 20px;
			border-radius: 5px;
			margin-bottom: 10px;
		}

		.day-group:hover .bar,
		.selected .bar {
			background: #5397d6;
		}

		.day-group:hover p,
		.selected p {
			color: #000;
		}

		.h-0 {
			height: 0%;
		}

		.h-25 {
			height: 25%;
		}

		.h-50 {
			height: 50%;
		}

		.h-75 {
			height: 75%;
		}

		.h-100 {
			height: 100%;
		}

		.stats-info {
			margin-top: 15px;
			display: flex;
			align-items: center;
			justify-content: space-around;
			position: relative;
		}

		.graph-container {
			position: relative;
		}

		.percent {
			display: block;
			width: 120px;
			height: 120px;
		}

		.graph-container p {
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			font-size: 12px;
			color: #fff;
			text-align: center;
		}

		.info p {
			margin-bottom: 10px;
		}

		.info span {
			color: #fff;
		}

	</style>
	<body>
		<h1 style="text-align:center">Check out your progress for this week!</h1>

	 <div class="main-container">
		<div class="header">
			Daily activity last 7 days
		</div>
		<div class="week-stats">
			@foreach (var progressData in ViewBag.BurnedCaloriesProgressData as List<object>)
			{
				var dayOfWeek = progressData.GetType().GetProperty("DayOfWeek").GetValue(progressData);
				var heightPercentage = (int)progressData.GetType().GetProperty("HeightPercentage").GetValue(progressData);
				var isSelectedDay = (bool)progressData.GetType().GetProperty("IsSelectedDay").GetValue(progressData);

				<div class="day-group @(isSelectedDay ? "selected" : "")">
					<div class="bar" style="height: @(heightPercentage)%"></div>
					<p class="day">@dayOfWeek</p>
				</div>
			}
		</div>
	</div>




	<div class="main-container">
		<div class="header">
			Calories intake last 7 days
		</div>
		<div class="week-stats">
			 @foreach (var progressData in ViewBag.ConsumedCaloriesProgressData as List<object>)
			{
				var dayOfWeek = progressData.GetType().GetProperty("DayOfWeek").GetValue(progressData);
				var heightPercentage = (int)progressData.GetType().GetProperty("HeightPercentage").GetValue(progressData);
				var isSelectedDay = (bool)progressData.GetType().GetProperty("IsSelectedDay").GetValue(progressData);

				<div class="day-group @(isSelectedDay ? "selected" : "")">
					<div class="bar" style="height: @(heightPercentage)%"></div>
					<p class="day">@dayOfWeek</p>
				</div>
			}
		</div>
	</div>

	<div class="quotes">
		@if (ViewBag.RandomQuote != null)
		{
			<p><em>@ViewBag.RandomQuote.QuoteText</em></p>
		}
		else
		{
			<p><em>No quote available</em></p>
		}
	</div>



	</body>