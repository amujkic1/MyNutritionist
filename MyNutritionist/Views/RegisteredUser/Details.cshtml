@model MyNutritionist.Models.RegisteredUser

@{
    ViewData["Title"] = "Profile";
}
<!DOCTYPE html>
<html>
<head>
    <title>Profile Details</title>
    <!-- CSS Styling for the Profile Page -->
    <style>
        /* CSS for the form section */


        .main-container {
            color: #abafc6;
            border-radius: 5px;
            padding: 20px;
            margin: 50px;
            width: fit-content;
            height: fit-content;
            display: inline-block;
            verticle-align: middle;
        }

        .header {
            font-size: 20px;
            color: #000;
            text-align: center;
        }

        .week-stats {
            white-space: nowrap;
            max-height: 170px;
            overflow: hidden;
        }

            .week-stats:hover {
                overflow-x: auto;
            }

        ::-webkit-scrollbar {
            height: 5px;
            width: 100%;
        }

        /* Track */
        ::-webkit-scrollbar-track {
            background: #444e80;
        }

        /* Handle */
        ::-webkit-scrollbar-thumb {
            background: #abafc6;
            border-radius: 10px;
        }

        ::-webkit-scrollbar-thumb {
            background: #5397d6;
        }

        .day-group {
            cursor: pointer;
            max-width: 400px;
            height: 110px;
            margin: 10px;
            display: inline-block;
        }

        .bar {
            background-color: #abafc6;
            width: 20px;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        .day-group:hover .bar,
        .selected .bar {
            background: #5397d6;
        }

        .day-group:hover p,
        .selected p {
            color: #000;
        }

        .h-0 {
            height: 0%;
        }

        .h-25 {
            height: 25%;
        }

        .h-50 {
            height: 50%;
        }

        .h-75 {
            height: 75%;
        }

        .h-100 {
            height: 100%;
        }

        .stats-info {
            margin-top: 15px;
            display: flex;
            align-items: center;
            justify-content: space-around;
            position: relative;
        }

        .graph-container {
            position: relative;
        }

        .percent {
            display: block;
            width: 120px;
            height: 120px;
        }

        .graph-container p {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 12px;
            color: #fff;
            text-align: center;
        }

        .info p {
            margin-bottom: 10px;
        }

        .info span {
            color: #fff;
        }

        .form-section {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .form-column {
            flex: 1;
            margin-right: 20px;
        }

        .form-label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-value {
            margin-bottom: 10px;
        }

        .form-field {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 8px;
            width: 100%;
            font-size: 16px;
        }

        /* CSS for progress bar and points section */
        .progress-section {
            margin-bottom: 20px;
        }

        .progress-label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .progress-bar {
            height: 20px;
            background-color: #f0f0f0;
            border-radius: 10px;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background-color: #56cc9d;
        }

        .points-section {
            margin-top: 20px;
        }

        .points-label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .points-field {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 8px;
            width: 100%;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <!-- User Details Section -->
    <div class="form-section">
        <div class="form-column">
            <div>
                <span class="form-label">Name:</span>
                <input class="form-field" type="text" value="@Html.DisplayFor(ru => ru.FullName)" readonly>
            </div>
            <div>
                <span class="form-label">Email:</span>
                <input class="form-field" type="text" value="@Html.DisplayFor(ru => ru.Email)" readonly>
            </div>
            <div>
                <span class="form-label">Username:</span>
                <input class="form-field" type="text" value="@Html.DisplayFor(ru => ru.NutriUsername)" readonly>
            </div>
            <div>
                <span class="form-label">Age:</span>
                <input class="form-field" type="text" value="@Html.DisplayFor(ru => ru.Age)" readonly>
            </div>

        </div>
        <div class="form-column">
            <div>
                <span class="form-label">Height:</span>
                <input class="form-field" type="text" value="@Html.DisplayFor(ru => ru.Height) cm" readonly>
            </div>
            <div>
                <span class="form-label">Weight:</span>
                <input class="form-field" type="text" value="@Html.DisplayFor(ru => ru.Weight) kg" readonly>
            </div>

            <div>
                <span class="form-label">City:</span>
                <input class="form-field" type="text" value="@Html.DisplayFor(ru => ru.City)" readonly>
            </div>
        </div>
    </div>

    <!-- Burned Calories Stats Section -->
    <div class="main-container">
        <div class="header">
            Daily activity last 7 days
        </div>
        <div class="week-stats">
            @foreach (var progressData in ViewBag.BurnedCaloriesProgressData as List<object>)
		{
			var dayOfWeek = progressData.GetType().GetProperty("DayOfWeek").GetValue(progressData);
			var heightPercentage = (int)progressData.GetType().GetProperty("HeightPercentage").GetValue(progressData);
			var isSelectedDay = (bool)progressData.GetType().GetProperty("IsSelectedDay").GetValue(progressData);

            <div class="day-group @(isSelectedDay ? "selected" : "")">
                <div class="bar" style="height: @(heightPercentage)%"></div>
                <p class="day">@dayOfWeek</p>
            </div>
		}
        </div>
    </div>

    <!-- Consumed Calories Stats Section -->
    <div class="main-container">
        <div class="header">
            Calories intake last 7 days
        </div>
        <div class="week-stats">
            @foreach (var progressData in ViewBag.ConsumedCaloriesProgressData as List<object>)
		{
			var dayOfWeek = progressData.GetType().GetProperty("DayOfWeek").GetValue(progressData);
			var heightPercentage = (int)progressData.GetType().GetProperty("HeightPercentage").GetValue(progressData);
			var isSelectedDay = (bool)progressData.GetType().GetProperty("IsSelectedDay").GetValue(progressData);

            <div class="day-group @(isSelectedDay ? "selected" : "")">
                <div class="bar" style="height: @(heightPercentage)%"></div>
                <p class="day">@dayOfWeek</p>
            </div>
		}
        </div>
    </div>

    <!-- User Points Section -->
    <div class="points-section">
        <span class="points-label">Current number of points:</span>
        <input class="points-field" type="text" value="@Html.DisplayFor(ru=>ru.Points)" readonly>
    </div>
</body>
</html>