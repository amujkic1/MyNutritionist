@model MyNutritionist.Models.RegisteredUser

@{
    ViewData["Title"] = "Edit";
}
<!DOCTYPE html>
<html>
<head>
    <title>Update Profile</title>
    <style>
        /* CSS for the form section */
        .form-section {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .form-column {
            flex: 1;
            margin-right: 20px;
        }

        .form-field {
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 8px;
            width: 100%;
        }

        .rounded-button {
            padding: 10px 20px;
            background-color: #56cc9d;
            color: black;
            text-decoration: none;
            display: inline-block;
            border-radius: 5px;
            font-size: 16px;
            outline: none;
            border: none;
        }

        /* CSS for the progress section */
        .progress-section {
            margin-bottom: 20px;
        }

        .progress-text {
            font-weight: bold;
            margin-bottom: 10px;
        }

        .progress-bar {
            width: 100%;
            background-color: #f0f0f0;
            border-radius: 10px;
            overflow: hidden;
        }

        .progress-bar-fill {
            background-color: #56cc9d;
            height: 20px;
        }

        /* CSS for the points section */
        .points-section {
            margin-bottom: 20px;
        }

        .points-text {
            font-weight: bold;
            margin-bottom: 10px;
        }

        .points-field {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 8px;
            width: 100%;
        }
    </style>
</head>

<!-- Edit Profile Form -->
<h3>Edit profile</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-bottom:20px">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:20px">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:20px">
                <label asp-for="NutriUsername" class="control-label"></label>
                <input asp-for="NutriUsername" class="form-control" />
                <span asp-validation-for="NutriUsername" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:20px">
                <label asp-for="NutriPassword" class="control-label"></label>
                <input asp-for="NutriPassword" class="form-control" />
                <span asp-validation-for="NutriPassword" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:20px">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:20px">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:20px">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:20px">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div style="margin-top: 20px" class="form-group style="margin-bottom:20px">
                <input type="submit" style="margin-left: 20px" value="Save" class="btn btn-primary" />
                <button style="margin-left: 20px" class="btn btn-outline-primary" asp-area="" asp-controller="RegisteredUser" asp-action="Delete"><i class="bi bi-pencil-square"></i>Delete account</button>
            </div>
        </form>
    </div>
</div>

<!-- Back to List Link -->
<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // JavaScript function to redirect to the Delete action
        function Delete(){
            window.location.href = '@Url.Action("Delete", "RegisteredUser")'
        }
    </script>
}
