<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

@model MyNutritionist.Utilities.RecipeViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Add Recipe</title>
    <style>
        /* Styling for the form inputs and layout */
        .input-container {
            margin-bottom: 20px;
        }

            .input-container label {
                font-weight: bold;
                display: block;
                margin-bottom: 5px;
            }

            .input-container input[type="text"] {
                width: 50%;
                padding: 6px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

            .input-container .align-inputs {
                display: flex;
                align-items: baseline;
            }

                .input-container .align-inputs label {
                    margin-right: 10px;
                }
        /* Styling for the recipe list on the right side */
        .recipe-list {
            width: 30%;
            margin-left: 20px;
            padding: 10px;
            background-color: #f2f2f2;
            border-radius: 4px;
            position: absolute;
            top: 90px;
            right: 20px;
        }

            .recipe-list h3 {
                margin-top: 0;
            }

            .recipe-list ul {
                padding: 0;
                margin: 0;
                list-style-type: none;
            }

            .recipe-list li {
                margin-bottom: 10px;
            }
        /* Styling for number inputs */
        input[type="number"].form-control {
            width: 50%;
        }
    </style>
</head>
<body>
    <h1>Add Recipe</h1>
    <!-- Form for adding a new recipe -->
    <form asp-action="Create" asp-controller="Recipes">
        
        <div class="input-container">
    <label asp-for="input.NameOfRecipe" class="control-label"></label>
    <input asp-for="input.NameOfRecipe" class="form-control" />
    <span asp-validation-for="input.NameOfRecipe" class="text-danger"></span>
</div>

<div class="input-container">
    <label asp-for="input.TotalCalories" class="control-label"></label>
    <input asp-for="input.TotalCalories" class="form-control" />
    <span asp-validation-for="input.TotalCalories" class="text-danger"></span>
</div>

<div class="input-container">
    <label asp-for="input.RecipeLink" class="control-label"></label>
    <input asp-for="input.RecipeLink" class="form-control" />
    <span asp-validation-for="input.RecipeLink" class="text-danger"></span>
</div>
        <div class="form-group" style="margin-top: 20px">
            <input type="submit" value="Add Recipe" class="btn btn-primary" style="margin-top: 20px; margin-left: 200px" />
        </div>
    </form>
    <!-- Display the list of recipes on the right side -->
    <div class="recipe-list">
        <h3>Recipe List</h3>
        <ul>
            <!-- Display each recipe with a link to its details -->
            @foreach (var recipe in Model.recipesToDisplay)
            {
                <li><a href="@recipe.RecipeLink">@recipe.NameOfRecipe</a></li>
            }
        </ul>
    </div>
</body>
</html>
