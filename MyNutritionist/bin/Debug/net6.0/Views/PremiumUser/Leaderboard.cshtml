@model MyNutritionist.Models.Leaderboard

@{
    ViewData["Title"] = "Index";
}

<h2>Premium Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Place</th>
            <th>Username</th>
            <th>Points</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var (user, index) in Model.Users.Select((user, index) => (user, index)))
        {
            <tr>
                <td>@(index + 1)</td>
                <td>@user.NutriUsername</td>
                <td>@user.Points</td>
            </tr>
        }
    </tbody>
</table>
